<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @board.title %>
</p>

<p>
  <table class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th>Comment</th>
        <th>Date<th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr><td><%= comment.content %></td><td><%= comment.created_at %></td></tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= form_for([@board, @comment]) do |f| %>
  <div class="field">
    <b><%= f.label :content %><br />
    </b>    <%= f.text_area :content, :style => 'width: 100%' %>
  </div>

  <div class="actions", style='text-align: center'>
    <%= f.submit 'post comment', :class => 'btn btn-primary btn-large' %>
  </div>
<% end %>

