<h1>Listing comments</h1>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= link_to 'Show', board_comment_path(comment.board_id, comment) %></td>
    <td><%= link_to 'Edit', editboard_comment_path(comment.board_id, comment) %></td>
    <td><%= link_to 'Destroy', board_comment_path(comment.board_id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

